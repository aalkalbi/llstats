<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table width="100%" border="1">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Debut</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Coach</th>
      <th>Postal code</th>
      <th>Rank</th>
      <th>Team</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.dob %></td>
        <td><%= player.debut %></td>
        <td><%= player.height %></td>
        <td><%= player.weight %></td>
        <td><%= player.coach.first_name.to_s %> <%= player.coach.last_name.to_s %></td>
        <td><%= player.postal_code %></td>
        <td><%= player.rank %></td>
        <td><%= player.team.name.to_s %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user.type == "Coach"%>
  <%= link_to 'New Player', new_player_path %>
<%end%>
